# include everything that doesn't have a .i3 extension
include ~/.config/i3/config_files/*[^\.i3]
include hardware
include sway_specific

smart_borders on

gaps inner 10

output * {
	bg ~/.background fill
}

input * {
	tap enabled
	natural_scroll disabled
	xkb_numlock enabled
}

input 2:14:ETPS/2_Elantech_Touchpad {
	natural_scroll enabled
}

bar {
	position top
	swaybar_command waybar
	font pango:Droid Sans Mono For Powerline 9
}

for_window [shell=".*"] title_format "%title :: %shell"

bindsym --no-warn $Super+v exec "/home/alex/repos/LookingGlass/looking-glass-B5-286-7c2d493b/client/build/looking-glass-client audio:periodSize=512 audio:bufferLatency:0"
bindsym $Alt+p exec tessen
bindsym $Alt+Escape exec sudo swap-keybinds
bindsym $Alt+g floating_modifier none
bindsym $Alt+Shift+g floating_modifier $Alt

